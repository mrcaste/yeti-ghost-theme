{{!< default}}
{{#post}}

{{#if image}}
<header class="jumbotron post-head main-header" style="background-image: url({{image}})">
</header>
{{/if}}

<main class="container content">
    <article class="{{post_class}}">

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
            <section class="post-meta">
                <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
                por <a href="{{author.url}}">{{author.name}}</a>
            </section>
            <section class="post-tags">
                {{tags}}
            </section>
        </header>
        
        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">
            {{#author}}
                {{#if image}}
                <figure class="author-image">
                    <a class="img" href="{{url}}" style="background-image: url({{image}})"><span class="hidden">Fotografía de {{name}}</span></a>
                </figure>
                {{/if}}

                <section class="author">
                    <h4 class="author-title"><a href="{{url}}">{{name}}</a></h4>
                    {{#if bio}}
                        <p>{{bio}}</p>
                    {{else}}
                        <p>Leer <a href="{{url}}">más entradas</a> de este autor.</p>
                    {{/if}}
                    <div class="author-meta">
                        {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
                        {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
                    </div>
                </section>
            {{/author}}

            <section class="share">
                <h4>Compartir esta entrada</h4>
                <a class="fa fa-twitter" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <span class="hidden">Twitter</span>
                </a>
                <a class="fa fa-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <span class="hidden">Facebook</span>
                </a>
                <a class="fa fa-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <span class="hidden">Google+</span>
                </a>
            </section>

        </footer>
    </article>
</main>

{{/post}}
